@model NexusConnectCRM.Areas.Admin.ViewModels.AdminListUsersViewModel

@{
    ViewData["Title"] = "View Prospects";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPortalLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Date Of Birth</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Roles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.DateOfBirth</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Roles</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
