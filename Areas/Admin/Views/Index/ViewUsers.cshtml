@model NexusConnectCRM.Areas.Admin.ViewModels.AdminListUsersViewModel

@{
    ViewData["Title"] = "All Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPortalLayout.cshtml";
}

<div class="container mt-3 mb-3">
    <h2 class="text-center">
        All Users
    </h2>
    <div class="row">
        <div class="col text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Date Of Birth</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.DateOfBirth</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Roles</td>
                            <td>
                                <a class="btn default-btn" href="@Url.Action("EditUser", "User", new { id = user.Id })">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="@Url.Action("Index", "Index")" class="cancel-btn">Back</a>
</div>
