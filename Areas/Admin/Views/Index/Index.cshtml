@using Microsoft.AspNetCore.Identity;
@using NexusConnectCRM.Data.Models.Identity;

@model NexusConnectCRM.Areas.Admin.ViewModels.AdminIndexViewModel

@{
    ViewData["Title"] = "Admin Portal";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPortalLayout.cshtml";
}

<div class="container mt-4" data-aos="fade-up" data-aos-delay="200">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Deals</h5>
                    <p class="card-text">12</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <p class="card-text">$45,780</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sales Performance</h5>
                    <canvas id="salesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/AdminScripts.js" asp-append-version="true" defer></script>
