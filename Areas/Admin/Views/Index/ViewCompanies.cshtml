@model NexusConnectCRM.Areas.Admin.ViewModels.AdminListCompaniesViewModel

@{
    ViewData["Title"] = "View Companies";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPortalLayout.cshtml";
}

<div class="container mt-3 mb-3">
    <h2 class="text-center">
        Companies
    </h2>
    <div class="row">
        <div class="row mb-3">
            <div class="col text-center">
                @using (Html.BeginForm("ViewCompanies", "Index", FormMethod.Post, new { area = "Admin" }))
                {
                    <div class="input-group mb-2">
                        @Html.TextBox("searchQuery", null, new { @class = "form-control", @placeholder = "Search...", @type = "Search" })
                        <button class="btn btn-secondary h-100 mb-0" type="submit" id="search-button">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="col text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Postal Code</th>
                        <th scope="col">Country</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Website</th>
                        <th scope="col">Industry</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model.Companies)
                    {
                        <tr>
                            <td>@company.Name</td>
                            <td>@company.Address</td>
                            <td>@company.City</td>
                            <td>@company.State</td>
                            <td>@company.Zip</td>
                            <td>@company.Country</td>
                            <td>@company.Email</td>
                            <td>@company.Phone</td>
                            <td>@company.Website</td>
                            <td>@company.Industry</td>
                            <td>
                                <a href="@Url.Action("EditCompany", "Company", new { area = "Admin", id = company.Id })" class="btn default-btn">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="container mt-3">
            <div class="row">
                <div class="col justify-content-center text-center">
                    <a id="prev" data-info="@Model.CurrentPage" class="btn default-btn @(Model.CurrentPage <= 1 ? "d-none" : "")" href="/Admin/Index/ViewCompanies?page=@(Model.CurrentPage - 1)">
                        <span class="fa fa-arrow-left"></span>
                    </a>
                    <a id="next" data-info="@Model.CurrentPage" class="btn default-btn @(Model.CurrentPage >= Model.TotalPages ? "d-none" : "")" href="/Admin/Index/ViewCompanies?page=@(Model.CurrentPage + 1)">
                        <span class="fa fa-arrow-right"></span>
                    </a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col text-center">
                    <span>
                        Page <span id="currentPage">@(Model.CurrentPage)</span> of <span id="totalPages">@Model.TotalPages</span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <a href="@Url.Action("Index", "Index")" class="cancel-btn">Back</a>
</div>
