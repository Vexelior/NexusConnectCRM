@model NexusConnectCRM.Areas.Admin.ViewModels.AdminListCustomersViewModel

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPortalLayout.cshtml";
}

<div class="container mt-3 mb-3">
    <h2 class="text-center">
        Customers
    </h2>
    <div class="row">
        <div class="row mb-3">
            <div class="col text-center">
                @using (Html.BeginForm("ViewCustomers", "Index", FormMethod.Post, new { area = "Admin" }))
                {
                    <div class="input-group mb-2">
                        @Html.TextBox("searchQuery", null, new { @class = "form-control", @placeholder = "Search...", @type = "Search" })
                        <button class="btn btn-secondary h-100 mb-0" type="submit" id="search-button">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="col text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip Code</th>
                        <th scope="col">Country</th>
                        <th scope="col">Company Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                            <td>@customer.EmailAddress</td>
                            <td>@customer.DateOfBirth</td>
                            <td>@customer.PhoneNumber</td>
                            <td>@customer.Address</td>
                            <td>@customer.City</td>
                            <td>@customer.State</td>
                            <td>@customer.ZipCode</td>
                            <td>@customer.Country</td>
                            <td>@customer.CompanyName</td>
                            <td>
                                <a class="btn btn-primary" href="@Url.Action("EditUser", "User", new { id = customer.UserId })">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="container mt-3">
            <div class="row">
                <div class="col justify-content-center text-center">
                    <a id="prev" data-info="@Model.CurrentPage" class="btn btn-primary @(Model.CurrentPage <= 1 ? "d-none" : "")" href="/Admin/Index/ViewCustomers?page=@(Model.CurrentPage - 1)">
                        <span class="fa fa-arrow-left"></span>
                    </a>
                    <a id="next" data-info="@Model.CurrentPage" class="btn btn-primary @(Model.CurrentPage >= Model.TotalPages ? "d-none" : "")" href="/Admin/Index/ViewCustomers?page=@(Model.CurrentPage + 1)">
                        <span class="fa fa-arrow-right"></span>
                    </a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col text-center">
                    <span>
                        Page <span id="currentPage">@(Model.CurrentPage)</span> of <span id="totalPages">@Model.TotalPages</span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <a href="@Url.Action("Index", "Index")" class="btn btn-secondary">Back</a>
</div>
