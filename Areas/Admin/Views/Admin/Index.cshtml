@using Microsoft.AspNetCore.Identity;
@using NexusConnectCRM.Data.Models.Identity;

@model NexusConnectCRM.Areas.Admin.ViewModels.AdminIndexViewModel

@{
    ViewData["Title"] = "Admin Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 text-center">
        <h1>Administration</h1>
    </div>

    @if (Model.Users != null && Model.Users.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Role</th>
                    <th>Confirmed?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        @if (user.Roles != null && user.Roles.Any())
                        {
                            <td>
                                <span>@user.Roles</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span>None</span>
                            </td>
                        }
                        <td>
                            @if (user.EmailConfirmed)
                            {
                                <i class="fa fa-solid fa-check" style="color: green;"></i>
                            }
                            else
                            {
                                <i class="fa fa-solid fa-times" style="color: red;"></i>
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found.</p>
    }
</div>
