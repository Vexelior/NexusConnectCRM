@using Microsoft.AspNetCore.Identity;
@using NexusConnectCRM.Data.Models.Identity;

@model NexusConnectCRM.Areas.Admin.ViewModels.AdminIndexViewModel

@{
    ViewData["Title"] = "Admin Portal";
    Layout = "~/Views/Shared/_AdminPortalLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Deals</h5>
                    <p class="card-text">12</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <p class="card-text">$45,780</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sales Performance</h5>
                    <canvas id="salesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <ul class="list-group">
                        @foreach (var user in Model.Users)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-8">
                                        <p>@user.UserName</p>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-secondary">Edit</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
