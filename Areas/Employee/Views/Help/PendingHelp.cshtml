@model NexusConnectCRM.Areas.Employee.ViewModels.ListHelpViewModel
@inject NexusConnectCRM.Data.ApplicationDbContext _context
@{
    ViewBag.Title = "Pending Tickets";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeePortalLayout.cshtml";
}

@if (Model.HelpList.Count() == 0)
{
    <div class="container mt-3" data-aos="fade-left" data-aos-duration="1000">
        <div class="row">
            <div class="col">
                <h1 class="text-center">
                    No Pending Tickets
                </h1>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-3" data-aos="fade-left" data-aos-duration="1000">
        <div class="row">
            <h1 class="text-center">Help Tickets</h1>
            @using (Html.BeginForm("PendingHelp", "Help", FormMethod.Post, new { area = "Employee" }))
            {
                <div class="container mt-2">
                    <div class="row">
                        <div class="col">
                            <div class="input-group mb-2">
                                @Html.TextBox("searchQuery", null, new { @class = "form-control", @placeholder = "Search...", @type = "Search" })
                                <button class="btn btn-secondary h-100 mb-0" type="submit" id="search-button">
                                    <span class="fa fa-search"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col" style="margin: 0 auto;">
                @foreach (var help in Model.HelpList)
                {
                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                @if (help.CustomerWasRecentResponse)
                                {
                                    <span class="fa fa-exclamation-circle" style="color: red;"></span>
                                }
                                @help.Title
                            </h5>
                            <p class="mt-3">User: @help.AuthorName</p>
                            <p>Submitted: @help.CreatedDate</p>
                            <a href="@Url.Action("HelpEdit", "Help", new { id = help.Id, author = help.Author })" class="btn default-btn">View</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col justify-content-center text-center">
                <a id="prev" data-info="@Model.CurrentPage" class="btn default-btn @(Model.CurrentPage <= 1 ? "d-none" : "")" href="/Employee/Help/PendingHelp?page=@(Model.CurrentPage - 1)">
                    <span class="fa fa-arrow-left"></span>
                </a>
                <a id="next" data-info="@Model.CurrentPage" class="btn default-btn @(Model.CurrentPage >= Model.TotalPages ? "d-none" : "")" href="/Employee/Help/PendingHelp?page=@(Model.CurrentPage + 1)">
                    <span class="fa fa-arrow-right"></span>
                </a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-center">
                <span>
                    Page <span id="currentPage">@(Model.CurrentPage)</span> of <span id="totalPages">@Model.TotalPages</span>
                </span>
            </div>
        </div>
    </div>
}
