@model NexusConnectCRM.Areas.Employee.ViewModels.EmployeeIndexViewModel

@{
    ViewData["Title"] = "Employee Portal";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeePortalLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Welcome, @Model.FirstName @Model.LastName!</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        Task Progress
                    </h5>
                    <canvas id="employeeTaskProgressChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/EmployeeScripts.js" asp-append-version="true" defer></script>
