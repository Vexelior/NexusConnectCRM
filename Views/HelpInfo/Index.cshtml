@model IEnumerable<NexusConnectCRM.Data.Models.Help.HelpInfo>

@{
    ViewData["Title"] = "Help Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Help Tickets</h1>

<a class="btn btn-secondary mb-2" href="@Url.Action("Create", "HelpInfo")">Create Ticket</a>

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPending)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRejected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.IsPending)
                    {
                        <i class="fa fa-check" style="color: green;"></i>
                    }
                    else
                    {
                        <i class="fa fa-times" style="color: red;"></i>
                    }
                </td>
                <td>
                    @if (item.IsApproved)
                    {
                        <i class="fa fa-check" style="color: green;"></i>
                    }
                    else
                    {
                        <i class="fa fa-times" style="color: red;"></i>
                    }
                </td>
                <td>
                    @if (item.IsRejected)
                    {
                        <i class="fa fa-check" style="color: green;"></i>
                    }
                    else
                    {
                        <i class="fa fa-times" style="color: red;"></i>
                    }
                </td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <i class="fa fa-check" style="color: green;"></i>
                    }
                    else
                    {
                        <i class="fa fa-times" style="color: red;"></i>
                    }
                </td>
                <td>
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
