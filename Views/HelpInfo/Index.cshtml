@model NexusConnectCRM.ViewModels.HelpInfoData.HelpInfoIndexViewModel

@{
    ViewData["Title"] = "Help Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Help Tickets</h1>

<a class="btn btn-secondary mb-2" href="@Url.Action("Create", "HelpInfo")">Create Ticket</a>

<div class="d-flex justify-content-center">
    <div class="d-flex flex-row me-3">
        <div style="width: 20px; height: 20px;">
            <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
        </div>
        <p class="ms-1">Completed</p>
    </div>
    <div class="d-flex flex-row me-3">
        <div style="width: 20px; height: 20px;">
            <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
        </div>
        <p class="ms-1">Pending</p>
    </div>
    <div class="d-flex flex-row me-3">
        <div style="width: 20px; height: 20px;">
            <span class="fa fa-exclamation" style="color: red; font-size: 16px;"></span>
        </div>
        <p class="ms-1">Responded</p>
    </div>
    <div class="d-flex flex-row me-3">
        <div style="width: 20px; height: 20px;">
            <span class="fa fa-times" style="color: red; font-size: 16px;"></span>
        </div>
        <p class="ms-1">Rejected</p>
    </div>
    <div class="d-flex flex-row me-3">
        <div style="width: 20px; height: 20px;">
            <span class="fa fa-lock" style="color: black; font-size: 16px;"></span>
        </div>
        <p class="ms-1">Closed</p>
    </div>
</div>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>Ticket #</th>
            <th>
                Title
            </th>
            <th>Viewed</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model.HelpInfos)
        {
            if (item.IsCompleted && !item.IsClosed)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>@item.EmployeeViewed</td>
                    <td>
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
                    </td>
                </tr>
            }
            else if (!item.IsCompleted && item.IsApproved && item.CustomerWasRecentResponse == true && item.IsPending == true)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @if (item.EmployeeViewed == true)
                    {
                        <td>
                            <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                        </td>

                    }
                    <td>
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                    </td>
                </tr>
            }
            else if (!item.IsCompleted && item.IsApproved && item.EmployeeWasRecentResponse == true)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @if (item.EmployeeViewed == true)
                    {
                        <td>
                            <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                        </td>

                    }
                    <td>
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <span class="fa fa-exclamation" style="color: red; font-size: 16px;"></span>
                    </td>
                </tr>
            }
            else if (item.IsRejected)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @if (item.EmployeeViewed == true)
                    {
                        <td>
                            <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                        </td>

                    }
                    <td>
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <span class="fa fa-times" style="color: red; font-size: 16px;"></span>
                    </td>
                </tr>
            }
            else if (item.IsPending)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @if (item.EmployeeViewed == true)
                    {
                        <td>
                            <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                        </td>

                    }
                    <td>
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                    </td>
                </tr>
            }
            else if (item.IsClosed && item.IsApproved)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @if (item.EmployeeViewed == true)
                    {
                        <td>
                            <span class="fa fa-check" style="color: green; font-size: 16px;"></span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="fa fa-waiting" style="color: orange; font-size: 16px;"></span>
                        </td>

                    }
                    <td>
                        <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <span class="fa fa-lock" style="color: black; font-size: 16px;"></span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
