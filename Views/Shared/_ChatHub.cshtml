<div id="chathub">
    <input type="checkbox" id="check">
    <label class="chat-btn" for="check">
        <i class="fa fa-comment comment"></i>
        <i class="fa fa-x close"></i>
    </label>
    <div class="chat-wrapper">
        <div class="chat-header">
            <h6>Chat</h6>
        </div>
        <div class="ps-2">
            <div class="container">
                <div class="row">
                    <div class="col" id="chat-message-area">
                        <ul id="chat-messages"></ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="chat-form">
                            <textarea class="form-control" id="Message" placeholder="Message"></textarea>
                            <button class="btn btn-primary" id="sendMessage">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<audio id="chat-notification" src="~/sounds/chathub-notification.mp3" muted></audio>
