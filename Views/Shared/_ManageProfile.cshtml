@using Microsoft.AspNetCore.Identity
@inject NexusConnectCRM.Data.ApplicationDbContext _context
@using System.Linq

@{
    var userId = _context.Users.FirstOrDefault(u => u.Email == User.Identity.Name)?.CompanyId;
    var userCompanyId = _context.Companies.FirstOrDefault(c => c.Id == userId)?.Id;
}
<div class="row">
    <div class="col-md-6" style="margin: 0 auto;">
        <div class="card">
            <h1 class="text-center">Update Info</h1>
            <div class="card-body prospect-update-info">
                <a class="btn btn-primary btn-responsive" asp-area="Identity" asp-page="/Account/Manage/Index" title="Update Profile">
                    <i class="fa fa-solid fa-user"></i>
                    Update Profile
                </a>
                <a class="btn btn-success" href="@Url.Action("UpdateUserCompanyDetails", "Company", new { id = userCompanyId })" title="Update Company">
                    <i class="fa fa-solid fa-building"></i>
                    Update Company
                </a>
                <a class="btn btn-warning" href="#" title="Help">
                    <i class="fa fa-solid fa-question"></i>
                    Help
                </a>
            </div>
        </div>
    </div>
</div>
