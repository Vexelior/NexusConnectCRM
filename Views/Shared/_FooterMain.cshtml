<footer id="footer">
    <div class="footer-top">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 footer-contact">
                    <h3>NexusConnect</h3>
                    <p>
                        A108 Adam Street <br>
                        New York, NY 535022<br>
                        United States <br><br>
                        <strong>Phone:</strong> +1 (555) 555 - 5555<br>
                        <strong>Email:</strong> info@nexusconnect.com<br>
                    </p>
                </div>
                <div class="col-md-4 footer-links">
                    <div class="footer-newsletter">
                        <h4>Join Our Newsletter</h4>
                        <p>
                            Take advantage of our weekly newsletter to stay up to date on the latest news and updates!
                        </p>
                        <form asp-action="NewsletterSignUp" asp-controller="Contact">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <input type="email" name="email" id="email_signup" value="@User.Identity.Name" />
                            }
                            else
                            {
                                <input type="email" name="email" id="email_signup" placeholder="Email" />
                            }
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
                <div class="col-md-4 footer-links">
                    <h4>Our Social Networks</h4>
                    <p>
                        Follow us on social media for updates and news!
                    </p>
                    <div class="social-links mt-3">
                        <a href="#" class="twitter"><i class="fa-brands fa-x-twitter"></i></a>
                        <a href="#" class="facebook"><i class="fa-brands fa-facebook"></i></a>
                        <a href="#" class="instagram"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" class="google-plus"><i class="fa-brands fa-google-plus"></i></a>
                        <a href="#" class="linkedin"><i class="fa-brands fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container footer-bottom clearfix">
        <div class="copyright">
            &copy; Copyright <strong><span>NexusConnect</span></strong>. All Rights Reserved - @DateTime.Today.Year
        </div>
    </div>
</footer>
