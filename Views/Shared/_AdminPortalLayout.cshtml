<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - NexusConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NexusConnectCRM.styles.css" asp-append-version="true" />
</head>
<body class="sb-sidenav-toggled">
    <div class="d-flex" id="wrapper">
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light desktop-nav-logo">
                <img src="~/logo.png" alt="NexusConnect Logo" style="width: 40px; height: 40px;" />
            </div>
            <div class="list-group list-group-flush">
                @await Html.PartialAsync("_EmployeeNavigationSidebarLinks")
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar portal-navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn" id="sidebarToggle" style="background-color: #4099cd;">
                        <i class="fas fa-bars" style="color: white;"></i>
                    </button>
                    <img src="~/logo.png" alt="NexusConnect Logo" style="width: 40px; height: 40px;" class="mobile-nav-logo" />
                </div>
            </nav>
            <div class="container mt-3 profile-info-container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - NexusConnect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/fontawesome/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/AdminScripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
