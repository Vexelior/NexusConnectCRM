@model NexusConnectCRM.Areas.Prospect.ViewModels.ProspectIndexViewModel
@using Microsoft.AspNetCore.Identity
@using NexusConnectCRM.Data.Models.Company
@inject NexusConnectCRM.Data.ApplicationDbContext _context
@using System.Linq
@{
    ViewData["Title"] = "Prospect";
    Layout = "~/Views/Shared/_ProspectPortalLayout.cshtml";

    var userCompanyId = Model.User?.CompanyId;
    var userCompany = _context.Companies?.FirstOrDefault(c => c.Id == userCompanyId);
}

@if (Model.User?.Address == null ||
     Model.User.Country == null ||
     Model.User.City == null ||
     Model.User.State == null ||
     Model.User.ZipCode == null ||
     Model.User.PhoneNumber == null)
{
    @await Html.PartialAsync("~/Areas/Prospect/Views/Shared/_PromptUserDetails.cshtml")
}
else
{
    <div class="container mt-5">
        <div class="row">
            <div class="alert alert-success text-center" style="padding-bottom: 0; width: 80%; margin: 0 auto; margin-bottom: 50px;">
                <p>Thank you for registering with NexusConnect! An associate will be in contact with you shortly and help you get started on the next steps.</p>
            </div>
            <div class="col-md-6">
                <div class="card prospect-info-card">
                    <i class="fa fa-solid fa-user mt-3" style="font-size: 24px;"></i>
                    <h1 class="text-center">@Model.User.FirstName @Model.User.LastName</h1>
                    <span class="text-muted text-center">@Model.User.Roles</span>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="text-center"><i class="fa fa-solid fa-map-marker" style="font-size: 16px;"></i> Address</h4>
                                <p class="text-center">@Model.User.Address</p>
                                <p class="text-center">@Model.User.City, @Model.User.State @Model.User.ZipCode</p>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-center">Contact</h4>
                                <p class="text-center"><i class="fa fa-solid fa-phone"></i> @Model.User.PhoneNumber</p>
                                <p class="text-center"><i class="fa fa-solid fa-envelope"></i> @Model.User.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card prospect-info-card">
                    <i class="fa fa-solid fa-building mt-3" style="font-size: 24px;"></i>
                    <h1 class="text-center">Company</h1>
                    <span class="text-muted text-center">@userCompany.Name</span>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="text-center"><i class="fa fa-solid fa-map-marker" style="font-size: 16px;"></i> Address</h4>
                                <p class="text-center">@userCompany?.Address</p>
                                <p class="text-center">@userCompany?.City, @userCompany?.State @userCompany?.Zip</p>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-center">Contact</h4>
                                <p class="text-center"><i class="fa fa-solid fa-phone"></i> @userCompany?.Phone</p>
                                <p class="text-center"><i class="fa fa-solid fa-envelope"></i> @userCompany?.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
