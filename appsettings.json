{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NexusConnectCRM;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "internalLogLevel": "Info",
    "internalLogFile": "c:\\temp\\internal-nlog.txt",
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "targets": {
      "allfile": {
        "type": "File",
        "fileName": "C:\\Logs\\NexusConnect\\NexusConnect-${shortdate}.log",
        "layout": "${longdate} ${message} -- ${exception:format=tostring}"
      },
      "ownFile-web": {
        "type": "File",
        "fileName": "C:\\Logs\\NexusConnect\\NexusConnect-web-${shortdate}.log",
        "layout": "${longdate} ${message} -- ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "ownFile-web"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": "true",
        "writeTo": "allfile"
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "ownFile-web"
      }
    ]
  }
}
